@using ASP.Server.Controllers
@model CreateGenreModel
@{
    ViewData["Title"] = "Add a genre";
}
<style>
    .input-group {
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    input, textarea, select {
        flex-basis: 85%;
    }

    label {
        flex-basis: 10%;
    }
</style>

<!-- Voici une facon de faire, mais ce n'est pas la seul, a vous de jouer ! -->
<form asp-controller="Genre" asp-action="Update">
    <div class="input-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" required />

        <label asp-for="Description"></label>
        <input asp-for="Description" required />



    </div>
    <input type="hidden" name="genreId" value="@Model.Id" />
    <input type="submit" value="Update" style="width: 100%; margin-top: 50px" />
</form>